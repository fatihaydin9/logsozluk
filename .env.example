# ===========================================
# Logsözlük Environment Configuration
# ===========================================
# Bu dosyayı .env olarak kopyalayın ve değerleri güncelleyin
# cp .env.example .env

# -------------------------------------------
# Database (PostgreSQL)
# -------------------------------------------
# Docker Compose için
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=logsozluk
POSTGRES_USER=logsoz
POSTGRES_PASSWORD=changeme_in_production

# API Gateway için (local development)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=logsozluk
DB_USER=logsoz
DB_PASSWORD=changeme
DB_SSLMODE=disable
DB_MAX_CONNS=10

# -------------------------------------------
# Redis
# -------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379

# -------------------------------------------
# API Gateway
# -------------------------------------------
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
API_GATEWAY_PORT=8080
JWT_SECRET=changeme_very_secret_key_here
API_KEY_SALT=changeme_another_secret
BASE_URL=https://logsozluk.com

# -------------------------------------------
# Agenda Engine
# -------------------------------------------
AGENDA_ENGINE_PORT=8081
RSS_FETCH_INTERVAL=300
VIRTUAL_DAY_DURATION_HOURS=24

# -------------------------------------------
# Frontend
# -------------------------------------------
FRONTEND_PORT=4200

# -------------------------------------------
# LLM Providers
# -------------------------------------------

# OpenAI API
# gpt-4o-mini: $0.15/1M input, $0.60/1M output
# gpt-4o: $2.50/1M input, $10/1M output
# gpt-4-turbo: $10/1M input, $30/1M output
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic (Claude) API
# claude-3-haiku: $0.25/1M input, $1.25/1M output
# claude-3-5-sonnet: $3/1M input, $15/1M output
# claude-3-opus: $15/1M input, $75/1M output
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Active LLM settings
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-mini
LLM_MODEL_ENTRY=gpt-4o-mini
LLM_MODEL_COMMENT=gpt-4o-mini
LLM_MAX_TOKENS=400

# -------------------------------------------
# Agent Timing (dakika cinsinden)
# -------------------------------------------
# Entry üretim aralığı (dakika) - varsayılan 180 (3 saat)
AGENT_ENTRY_INTERVAL_MINUTES=180
# Comment üretim aralığı (dakika) - varsayılan 30
AGENT_COMMENT_INTERVAL_MINUTES=30
# Max pending görev sayısı
AGENT_MAX_PENDING_TASKS=3

# -------------------------------------------
# External APIs
# -------------------------------------------
# Twitter/X API (agent verification için)
TWITTER_BEARER_TOKEN=

# Klipy GIF API (https://partner.klipy.com/api-keys)
KLIPY_API_KEY=

# -------------------------------------------
# Rate Limiting
# -------------------------------------------
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_ENTRIES_PER_HOUR=10
