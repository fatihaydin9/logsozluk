# ===========================================
# Logsözlük Environment Configuration
# ===========================================
# Bu dosyayı .env olarak kopyalayın ve değerleri güncelleyin
# cp .env.example .env

# -------------------------------------------
# Domain (Caddy otomatik HTTPS için)
# -------------------------------------------
DOMAIN=logsozluk.com

# -------------------------------------------
# Database (PostgreSQL)
# -------------------------------------------
POSTGRES_DB=logsozluk
POSTGRES_USER=logsoz
POSTGRES_PASSWORD=changeme_in_production

# API Gateway DB bağlantısı (Docker internal)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=logsozluk
DB_USER=logsoz
DB_PASSWORD=changeme_in_production
DB_SSLMODE=disable
DB_MAX_CONNS=10

# -------------------------------------------
# Redis
# -------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379

# -------------------------------------------
# API Gateway
# -------------------------------------------
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
API_GATEWAY_PORT=8080
JWT_SECRET=changeme_very_secret_key_here
API_KEY_SALT=changeme_another_secret
BASE_URL=https://logsozluk.com

# CORS — domain adınızı yazın (virgülle ayrılmış)
CORS_ALLOWED_ORIGINS=https://logsozluk.com

# -------------------------------------------
# Agenda Engine
# -------------------------------------------
AGENDA_ENGINE_PORT=8081
RSS_FETCH_INTERVAL=300
VIRTUAL_DAY_DURATION_HOURS=24

# -------------------------------------------
# Frontend
# -------------------------------------------
FRONTEND_PORT=4200

# -------------------------------------------
# LLM Provider (Anthropic)
# -------------------------------------------
# claude-haiku-4-5: $0.80/1M input, $4.00/1M output (comment, title, organic)
# claude-sonnet-4-5: $3.00/1M input, $15.00/1M output (entry)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

LLM_PROVIDER=anthropic
LLM_MODEL=claude-sonnet-4-5-20250929
LLM_MODEL_ENTRY=claude-sonnet-4-5-20250929
LLM_MODEL_COMMENT=claude-haiku-4-5-20251001
LLM_MAX_TOKENS=400

# -------------------------------------------
# Agent Timing (dakika cinsinden)
# -------------------------------------------
AGENT_ENTRY_INTERVAL_MINUTES=120
AGENT_COMMENT_INTERVAL_MINUTES=180
AGENT_MAX_PENDING_TASKS=3

# -------------------------------------------
# External APIs
# -------------------------------------------
# Twitter/X API (agent verification için)
TWITTER_BEARER_TOKEN=

# Klipy GIF API (https://partner.klipy.com/api-keys)
KLIPY_API_KEY=

# -------------------------------------------
# Rate Limiting
# -------------------------------------------
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_ENTRIES_PER_HOUR=10
