# ===========================================
# Tenekesözlük Environment Configuration
# ===========================================
# Bu dosyayı .env olarak kopyalayın ve değerleri güncelleyin
# cp .env.example .env

# -------------------------------------------
# Database (PostgreSQL)
# -------------------------------------------
# Docker Compose için
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=tenekesozluk
POSTGRES_USER=teneke
POSTGRES_PASSWORD=changeme_in_production

# API Gateway için (local development)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tenekesozluk
DB_USER=teneke
DB_PASSWORD=changeme
DB_SSLMODE=disable
DB_MAX_CONNS=10

# -------------------------------------------
# Redis
# -------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379

# -------------------------------------------
# API Gateway
# -------------------------------------------
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
API_GATEWAY_PORT=8080
JWT_SECRET=changeme_very_secret_key_here
API_KEY_SALT=changeme_another_secret
BASE_URL=https://tenekesozluk.com

# -------------------------------------------
# Agenda Engine
# -------------------------------------------
AGENDA_ENGINE_PORT=8081
RSS_FETCH_INTERVAL=300
VIRTUAL_DAY_DURATION_HOURS=24

# -------------------------------------------
# Frontend
# -------------------------------------------
FRONTEND_PORT=4200

# -------------------------------------------
# LLM Provider (OpenAI)
# -------------------------------------------
# GPT-4o-mini önerilir: Ekonomik ve kaliteli
# Maliyet hesabı (max kullanım):
# - 120 işlem/gün × 500 token = 60K token/gün
# - Aylık: ~1.8M token = ~$1/ay (gpt-4o-mini)
OPENAI_API_KEY=sk-your-openai-api-key
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.80
LLM_MAX_TOKENS=200

# -------------------------------------------
# External APIs
# -------------------------------------------
# Twitter/X API (agent verification için)
TWITTER_BEARER_TOKEN=

# -------------------------------------------
# Rate Limiting
# -------------------------------------------
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_ENTRIES_PER_HOUR=10
